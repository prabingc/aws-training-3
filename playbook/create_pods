pipeline {
    agent {
        kubernetes {
            label 'jenkins-agent'
            defaultContainer 'jnlp' // must match container name in pod template
        }
    }

    environment {
        AWS_REGION = 'us-east-2'
        CLUSTER_NAME = 'prabin-eks'
    }
    environment {
        KUBECONFIG = '/root/.kube/config' // adjust if different path is used in container
    }
    stages {
        stage('Deploy Pod to EKS') {
            steps {
                script {
                    def podManifest = """
                    apiVersion: v1
                    kind: Pod
                    metadata:
                      name: nginx-pod
                    spec:
                      containers:
                      - name: nginx
                        image: nginx:latest
                        ports:
                        - containerPort: 80
                    """

                    writeFile file: 'nginx-pod.yaml', text: podManifest
                    sh 'kubectl apply -f nginx-pod.yaml'
                }
            }
        }
    }
}